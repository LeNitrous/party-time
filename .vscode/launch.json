{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch",
            "type": "coreclr",
            "request": "launch",
            "program": "${env:GODOT4}",
            "cwd": "${workspaceFolder}",
            "console": "internalConsole",
            "stopAtEntry": false,
            "preLaunchTask": "build",
            "args": [
                "--path",
                "${workspaceFolder}/source"
            ],
        },
        {
          "name": "Test",
          "type": "coreclr",
          "request": "launch",
          "program": "${workspaceFolder}/tools/Party.Tools.Models/bin/Debug/net8.0/Party.Tools.Models.dll",
          "cwd": "${workspaceFolder}",
          "console": "internalConsole",
          "stopAtEntry": false,
          "preLaunchTask": "build",
          "args": [
              "--path",
              "${workspaceFolder}/tools/Party.Tools.Models"
          ],
        },
        {
            "name": "Launch Editor",
            "type": "coreclr",
            "request": "launch",
            "program": "${env:GODOT4}",
            "cwd": "${workspaceFolder}",
            "console": "internalConsole",
            "stopAtEntry": false,
            "preLaunchTask": "build",
            "args": [
                "--editor",
                "--path",
                "${workspaceFolder}/source"
            ],
        },
        {
            "name": "Attach",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:pickProcess}"
        }
    ]
}